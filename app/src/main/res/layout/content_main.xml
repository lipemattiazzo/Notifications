<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.androido.notifications.MainActivity"
    tools:showIn="@layout/app_bar_main">


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="top|center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnMaxPriorityNotification"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30sp"
                android:text="@string/max_priority" />

            <Button
                android:id="@+id/btnHighPriorityNotification"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="@string/high_priority" />

            <Button
                android:id="@+id/btnLowPriorityNotification"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="@string/low_priority" />

            <Button
                android:id="@+id/btnMinPriorityNotification"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="@string/min_priority" />

            <Button
                android:id="@+id/btnDefaultification"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="@string/default_priority" />

            <Button
                android:id="@+id/btnOldTypeNotification"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="@string/old"/>
            <Button
                android:id="@+id/btnBigTextNotification"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="@string/big_text"/>
            <Button
                android:id="@+id/btnBigImageNotification"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="@string/big_picture"/>
            <Button
                android:id="@+id/btnInboxTypeNotification"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="@string/inbox_type"/>
            <Button
                android:id="@+id/btnNougatNotification"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="@string/inbox_type"/>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
